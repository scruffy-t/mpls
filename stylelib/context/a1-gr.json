{
   // A1 with 2 inch margins
   "figure.figsize": [21.4, 13.23],

   // fonts
   "font.size": 10,
   "axes.labelsize": 10,
   "legend.fontsize": 10,
   "axes.titlesize": 10,
   "xtick.labelsize": 8,
   "ytick.labelsize": 8,

   // lines
   "axes.linewidth": 0.8,
   "grid.linewidth": 0.5,
   "lines.linewidth": 1,
   "patch.linewidth": 1,

   // markers
   "lines.markersize": 4,
   "lines.markeredgewidth": 1,

   // ticks
   "xtick.major.size": 3.5,
   "xtick.major.width": 1,
   "xtick.minor.size": 2,
   "xtick.minor.width": 1,
   "xtick.major.pad": 3.5,
   "ytick.major.size": 3.5,
   "ytick.minor.size": 2,
   "ytick.major.width": 1,
   "ytick.minor.width": 1,
   "ytick.major.pad": 3.5
}
