{
   // A2 with 2 inch margins
   "figure.figsize": [14.5, 8.96],

   // fonts
   "font.size": 18,
   "axes.labelsize": 18,
   "legend.fontsize": 18,
   "axes.titlesize": 18,

   "xtick.labelsize": 16,
   "ytick.labelsize": 16,

   // lines
   "axes.linewidth": 2.0,
   "grid.linewidth": 1.5,
   "lines.linewidth": 2.5,
   "patch.linewidth": 2.5,

   // markers
   "lines.markersize": 4,
   "lines.markeredgewidth": 1,

   // ticks
   "xtick.major.size": 3.5,
   "xtick.major.width": 1,
   "xtick.minor.size": 2,
   "xtick.minor.width": 1,
   "xtick.major.pad": 3.5,
   "ytick.major.size": 3.5,
   "ytick.minor.size": 2,
   "ytick.major.width": 1,
   "ytick.minor.width": 1,
   "ytick.major.pad": 3.5
}
