{
   // A4 with 2 inch margins
   "figure.figsize": [6.3, 3.89],

   // fonts
   "font.size": 14,
   "axes.labelsize": 14,
   "legend.fontsize": 14,
   "axes.titlesize": 14,

   "xtick.labelsize": 12,
   "ytick.labelsize": 12,

   // lines
   "axes.linewidth": 1.0,
   "grid.linewidth": 0.5,
   "lines.linewidth": 1.5,
   "patch.linewidth": 1.5,

   // markers
   "lines.markersize": 4,
   "lines.markeredgewidth": 1,

   // ticks
   "xtick.major.size": 3.5,
   "xtick.major.width": 1,
   "xtick.minor.size": 2,
   "xtick.minor.width": 1,
   "xtick.major.pad": 3.5,
   "ytick.major.size": 3.5,
   "ytick.minor.size": 2,
   "ytick.major.width": 1,
   "ytick.minor.width": 1,
   "ytick.major.pad": 3.5
}
